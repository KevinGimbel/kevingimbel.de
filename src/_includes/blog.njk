{% extends "base.njk" %}

{% block content %}
<article class="post">
  <header class="post-header">
    <h1 class="mt0 mb0">{{ title }}</h1>
  </header>
  <div class="post-body">
    <p>Listing all {{ collections.blog | length }} articles</p>
    {% set postslist = collections.blog %}
    {% set showYear = true %}
    {% set headingLevel = 'h3' %}
    {% include "postslist.njk" %}
  </div>
</article>
{% endblock %}