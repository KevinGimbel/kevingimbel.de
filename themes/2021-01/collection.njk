{% extends "base.njk" %}

{% block content %}
<article class="post stack">
  <header class="post-header">
    <h1 class="mt0 mb0">{{ title }}</h1>
  </header>
  <div class="post-body stack">
    {{ content | safe }}
    {% set postslist = collections[collection] if collection else collections['blog'] %}
    {% set showYear = include_year if include_year else true  %}
    {% set showPreviewImage = include_preview_images %}
    {% set headingLevel = 'h3' %}
    {% include "postslist.njk" %}
  </div>
</article>
{% endblock %}